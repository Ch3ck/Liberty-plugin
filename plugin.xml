<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.libertyeiffel.eclipse.category.wizards"
            name="%category.name">
      </category>
      <wizard
            category="org.libertyeiffel.eclipse.category.wizards"
            class="org.libertyeiffel.eclipse.wizards.LEProjectNewWizard"
            finalPerspective="org.libertyeiffel.eclipse.perspective"
            icon="icons/sample.gif"
            id="org.libertyeiffel.eclipse.wizard.new"
            name="%wizard.name">
      </wizard>
      <wizard
            category="org.libertyeiffel.eclipse.category.wizards"
            class="org.libertyeiffel.eclipse.wizards.NewEiffelClassFile"
            descriptionImage="icons/sample.gif"
            icon="icons/sample.gif"
            id="org.libertyeiffel.eclipse.file.class"
            name="%wizard.name.0">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.libertyeiffel.eclipse.category"
            class="org.eclipse.ui.navigator.CommonNavigator"
            icon="icons/sample.gif"
            id="org.libertyeiffel.eclipse.navigator"
            name="%view.name">
      </view>
      <category
            id="org.libertyeiffel.eclipse.category"
            name="%category.name.0">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.libertyeiffel.eclipse.navigator">
         <includes>
            <contentExtension
                  pattern="org.libertyeiffel.eclipse.navigatorContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewer
            viewerId="org.libertyeiffel.eclipse.navigator">
         <popupMenu
               id="org.libertyeiffel.eclipse.navigator#PopupMenu">
            <insertionPoint
                  name="group.new"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.build"
                  separator="true">
            </insertionPoint>
         </popupMenu>
      </viewer>
      <viewerActionBinding
            viewerId="org.libertyeiffel.eclipse.navigator">
         <includes>
            <actionExtension
                  pattern="org.libertyeiffel.eclipse.popup.actionprovider.CustomNewAction">
            </actionExtension>
            <actionExtension
                  pattern="org.libertyeiffel.eclipse.popup.actionprovider.CustomRefreshAction">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.libertyeiffel.eclipse.perspectives.Perspective"
            id="org.libertyeiffel.eclipse.perspective"
            name="%perspective.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="org.libertyeiffel.eclipse.navigator"
               minimized="false"
               ratio="0.25"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <newWizardShortcut
               id="org.libertyeiffel.eclipse.wizard.new">
         </newWizardShortcut>
         <newWizardShortcut
               id="org.libertyeiffel.eclipse.file.class">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         id="org.libertyeiffel.eclipse.projectNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.libertyeiffel.eclipse.natures.ProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/sample.gif"
            id="org.libertyeiffel.eclipse.logo"
            natureId="org.libertyeiffel.eclipse.projectNature">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            contentProvider="org.libertyeiffel.eclipse.navigator.LEContentProvider"
            id="org.libertyeiffel.eclipse.navigatorContent"
            labelProvider="org.libertyeiffel.eclipse.navigator.LELabelProvider"
            name="%navigatorContent.name">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.eclipse.core.resources.IWorkspaceRoot">
               </instanceof>
            </or>
         </triggerPoints>
         <commonSorter
               class="org.libertyeiffel.eclipse.sorter.CategorySorter"
               id="org.libertyeiffel.eclipse.sorter.schemacategorysorter">
            <parentExpression>
               <or>
                  <instanceof
                        value="org.libertyeiffel.eclipse.navigator.LEProjectParent">
                  </instanceof>
               </or>
            </parentExpression>
         </commonSorter>
      </navigatorContent>
      <actionProvider
            class="org.libertyeiffel.eclipse.popup.actionprovider.NewActionProvider"
            id="org.libertyeiffel.eclipse.popup.actionprovider.CustomNewAction">
         <enablement>
            <or>
               <instanceof
                     value="org.libertyeiffel.eclipse.navigator.ILEProjectElement">
               </instanceof>
               <instanceof
                     value="org.libertyeiffel.eclipse.navigator.ILEProjectElement">
               </instanceof>
            </or>
         </enablement>
      </actionProvider>
      <actionProvider
            class="org.libertyeiffel.eclipse.popup.actionprovider.RefreshActionProvider"
            id="org.libertyeiffel.eclipse.popup.actionprovider.CustomRefreshAction">
         <enablement>
            <or>
               <instanceof
                     value="org.libertyeiffel.eclipse.navigator.ILEProjectElement">
               </instanceof>
               <instanceof
                     value="org.libertyeiffel.eclipse.navigator.ILEProjectElement">
               </instanceof>
            </or>
         </enablement>
      </actionProvider>
      <commonWizard
            type="new"
            wizardId="org.libertyeiffel.eclipse.wizard.new">
         <enablement></enablement>
      </commonWizard>
   </extension>
   <extension
         id="org.libertyeiffel.eclipse.contentype"
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="e"
            id="org.libertyeiffel.eclipse.contenttype.src"
            name="%content-type.name"
            priority="normal">
         <describer
               class="org.eclipse.core.internal.content.TextContentDescriber">
            <parameter
                  name="element"
                  value="Eiffel class">
            </parameter>
         </describer>
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Open the New Eiffel Class Wizard"
            id="org.libertyeiffel.eclipse.file.class"
            name="Eiffel Class">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.libertyeiffel.eclipse.navigator.handler.BogusHandler"
            commandId="org.libertyeiffel.eclipse.file.class">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate>
                  <or>
                     <instanceof
                           value="org.libertyeiffel.eclipse.navigator.LEProjectParent">
                     </instanceof>
                     <instanceof
                           value="org.libertyeiffel.eclipse.navigator.LEProjectSrc">
                     </instanceof>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:common.new.menu?after=additions">
         <command
               commandId="org.libertyeiffel.eclipse.file.class"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.libertyeiffel.eclipse.file.class"
            icon="icons/sample.gif">
      </image>
   </extension>

</plugin>
